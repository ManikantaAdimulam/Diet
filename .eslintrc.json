{
  "parser": "babel-eslint",
  "plugins": ["react", "react-native"],
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "react-native/react-native": true
  },
  "extends": ["plugin:react-native/all"],
  "rules": {
    "react-native/sort-styles": 0,
    "react-native/no-color-literals": 0
  }
}
